    <script>
        function aleatorio(min, max){
            return Math.floor(Math.random() * (max-min +1)+min)
        }
        function eleccion(jugada){
                let resultado= ""
                if (jugada==1) {
                    resultado="piedrağŸª¨"
            }
                else if(jugada==2){
                    resultado="papel.ğŸ“"
            }
                else if(jugada==3){
                    resultado="Tijerasâœ‚ï¸"
            }
                else{
                    resultado="Seleccion no valida para el juego"
            } 
            return resultado
        }

        // 1: piedra, 2: papel, 3: tijeras
        let jugador=0
        let pc= aleatorio(1,3)
        jugador = prompt("Elige 1 para piedra, 2 para papel, 3 para tijeras")  
        
        alert("PC elige: "+ eleccion(pc))
        alert("TÃº eliges: " + eleccion(jugador))
        
        // llego la hora del juego

        if (pc==jugador){
            alert("EMPATE")
        }
        else if((jugador-pc)==1){
            alert("ganaste")
        }
        else if((jugador-pc)== -2){
            alert("ganaste")
        }else {
            alert("PERDISTE")
        }

    </script>
